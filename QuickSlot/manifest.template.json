{
  "manifest_version": 3,
  "name": "QuickSlot",
  "version": "1.0",
  "description": "Streamline meeting scheduling for SDRs by finding available time slots across multiple calendars",
  "permissions": [
    "identity",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "{{CLIENT_ID}}",
    "scopes": [
      "https://www.googleapis.com/auth/calendar.readonly",
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickSlot - Find Available Meeting Times"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  }
}
